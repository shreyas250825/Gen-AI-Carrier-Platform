# ============================================================================
# GenAI Career Intelligence Platform - Docker Environment Configuration
# ============================================================================

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=true
NODE_ENV=development

# Service Restart Policy
RESTART_POLICY=unless-stopped

# Volume Mount Mode (rw for development, ro for production)
VOLUME_MODE=rw

# ============================================================================
# SERVICE PORTS
# ============================================================================
FRONTEND_PORT=3000
BACKEND_PORT=8000
MONGODB_PORT=27017
REDIS_PORT=6379
OLLAMA_PORT=11434
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
LOCALSTACK_PORT=4566
HTTP_PORT=80
HTTPS_PORT=443

# ============================================================================
# BUILD TARGETS
# ============================================================================
FRONTEND_TARGET=development
BACKEND_TARGET=development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# MongoDB Settings
MONGODB_VERSION=7.0
MONGODB_ROOT_USER=admin
MONGODB_ROOT_PASSWORD=genai_secure_password_2025
MONGODB_DATABASE=genai_career

# MongoDB Atlas (for production)
MONGODB_URI=mongodb://admin:genai_secure_password_2025@mongodb:27017/genai_career?authSource=admin

# Redis Settings
REDIS_VERSION=7.2-alpine
REDIS_PASSWORD=redis_secure_password_2025

# ============================================================================
# AI ENGINE CONFIGURATION
# ============================================================================
# Ollama Settings
OLLAMA_VERSION=latest
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=30
OLLAMA_MEMORY=4G
OLLAMA_MEMORY_LIMIT=8G

# Gemini Settings (Cloud Fallback)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# AI Engine Preferences
PREFER_OLLAMA=true
FALLBACK_TO_GEMINI=true

# ============================================================================
# DEMO CONFIGURATION (for AWS ImpactX Challenge)
# ============================================================================
DEMO_MODE=true
DEMO_CANDIDATE_NAME=AWS ImpactX Demo User
DEMO_SHOWCASE_FEATURES=true

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
# S3 Storage
AWS_S3_BUCKET=genai-career-platform-storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# LocalStack (Development)
LOCALSTACK_VERSION=latest
LOCALSTACK_SERVICES=s3,cloudwatch,iam
LOCALSTACK_DEBUG=1

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Frontend Settings
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# Backend Security
SECRET_KEY=docker_dev_secret_key_change_in_production_2025
ALLOWED_HOSTS=["localhost", "127.0.0.1", "frontend", "backend"]

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://frontend:3000"]

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
MAX_CONCURRENT_REQUESTS=10
CACHE_TTL=300
RATE_LIMIT_PER_MINUTE=100

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
# Prometheus
PROMETHEUS_VERSION=latest

# Grafana
GRAFANA_VERSION=latest
GRAFANA_PASSWORD=grafana_admin_password_2025

# ============================================================================
# PROXY CONFIGURATION
# ============================================================================
NGINX_VERSION=alpine

# ============================================================================
# VERSION TAGS
# ============================================================================
# Service Versions (for production pinning)
MONGODB_VERSION=7.0
REDIS_VERSION=7.2-alpine
OLLAMA_VERSION=latest
NGINX_VERSION=alpine
PROMETHEUS_VERSION=latest
GRAFANA_VERSION=latest
LOCALSTACK_VERSION=latest

# ============================================================================
# DEVELOPMENT OVERRIDES
# ============================================================================
# Uncomment for development-specific settings

# Enable hot reload for development
# VOLUME_MODE=rw
# DEBUG=true
# NODE_ENV=development

# Use local services instead of cloud
# USE_LOCALSTACK=true
# AWS_ENDPOINT_URL=http://localstack:4566

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================
# Uncomment for production deployment

# ENVIRONMENT=production
# DEBUG=false
# NODE_ENV=production
# RESTART_POLICY=always
# VOLUME_MODE=ro

# Use production-grade passwords
# MONGODB_ROOT_PASSWORD=your_secure_mongodb_password
# REDIS_PASSWORD=your_secure_redis_password
# SECRET_KEY=your_secure_secret_key
# GRAFANA_PASSWORD=your_secure_grafana_password

# Use MongoDB Atlas for production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/genai_career

# Resource limits for production
# OLLAMA_MEMORY=8G
# OLLAMA_MEMORY_LIMIT=16G

# ============================================================================
# TESTING OVERRIDES
# ============================================================================
# Uncomment for testing environment

# ENVIRONMENT=testing
# MONGODB_DATABASE=genai_career_test
# USE_LOCALSTACK=true
# CACHE_TTL=0